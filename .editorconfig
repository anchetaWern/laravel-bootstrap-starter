root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
trim_trailing_whitespace = true
quote_type = double

[*.php]
indent_style = space
indent_size = 4

[*.blade.php]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 3

[*.html]
indent_style = space
indent_size = 2
